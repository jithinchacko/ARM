{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "0.0.0.1",
    "parameters": { 
        "vnetaddress": {
            "type": "string",
            "defaultValue": "10.10.0.0/16",
            "metadata": {
                "description": "description"
            }
        },
        "subnetaddressspaces": {
            "type": "array",
            "defaultValue": ["10.10.0.0/24", "10.10.1.0/24", "10.10.2.0/24"],
            "metadata": {
                "description": "description"
            }
        }
     },
     "variables": {
         "vnetname": "olbvnet",
         "location": "[resourceGroup().location]"

     },
    "resources": [ 
        {
            "name": "[variables('vnetname')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[variables('location')]",
            "tags": {
                "displayName": "[variables('vnetname')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetaddress')]"
                    ]
                }

            }
        },
        {
             "name": "[concat(variables('vnetname'), '/', 'subnet',copyIndex())]",
             "type": "Microsoft.Network/virtualNetworks/subnets",
             "apiVersion": "2020-07-01",
             "properties": {
                 "addressPrefix": "[parameters('subnetaddressspaces')[copyIndex()]]"

             },
             "copy": {
                 "name": "subnetcopy",
                 "count": "[length(parameters('subnetaddressspaces'))]",
                 "mode": "serial"
             },
             "dependsOn": ["[resourceId('Microsoft.Network/virtualNetworks', variables('vnetname'))]"]
        }
     ]
  }